{
    "name": "lieblingsspieler",
    "version": "1.0.0",
    "description": "Favorite Players Hub - A web application to search and manage favorite sports players",
    "main": "index.html",
    "type": "module",
    "scripts": {
        "start": "npx serve .",
        "dev": "npx serve . --port 3000",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "test": "echo \"No tests specified\" && exit 0",
        "format": "prettier --write ."
    },
    "keywords": [
        "sports",
        "players",
        "favorites",
        "web-app",
        "javascript"
    ],
    "author": "Your Name",
    "license": "MIT",
    "engines": {
        "node": ">=14.0.0"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "dependencies": {},
    "devDependencies": {
        "@babel/core": "^7.18.0",
        "@babel/preset-env": "^7.18.0",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.6.2",
        "serve": "^13.0.2"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es2021": true,
            "node": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:import/errors",
            "plugin:import/warnings",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "rules": {
            "no-console": "warn",
            "import/order": "error",
            "no-unused-vars": "warn"
        }
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "printWidth": 100
    }
}